# Configuration definitions for thorn HDF5

PROVIDES HDF5
{
  SCRIPT src/detect.sh
  LANG bash
  OPTIONS HDF5 HDF5_DIR HDF5_INSTALL_DIR HDF5_ENABLE_CXX HDF5_ENABLE_FORTRAN ZLIB_DIR LIBSZ_DIR LIBZ_DIR
}

REQUIRES HDF5

REQUIRES zlib

# link before MPI in case a parallel-enabled HDF5 version is used
OPTIONAL MPI
{
}
